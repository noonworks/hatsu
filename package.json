{
  "name": "hatsu",
  "version": "1.0.0",
  "main": "index.js",
  "author": "noonworks",
  "license": "MIT",
  "scripts": {
    "build": "npm-run-all -p build:js build:copy",
    "build:js": "browserify --node -o docs/js/main.js -p [ tsify -p . ] src/ts/index.ts",
    "build:copy": "cpx \"./src/public/**/*\" ./docs",
    "clean": "rimraf ./docs/*",
    "test": "jest",
    "lint": "eslint .",
    "fix": "eslint --fix .",
    "serve": "superstatic docs --port 8080 --host localhost"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "browserify": "^16.2.3",
    "cpx": "^1.5.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.1",
    "rimraf": "^2.6.3",
    "superstatic": "^6.0.4",
    "ts-jest": "^24.0.2",
    "tsify": "^4.0.1",
    "typescript": "^3.5.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
